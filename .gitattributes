# Auto detect text files and perform LF normalization
* text=auto

# Documents
*.md text diff=markdown
*.txt text
*.pdf binary

# Source code
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf

# Configuration files
.gitattributes text eol=lf
.gitignore text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.config.js text eol=lf

# Package files
package.json text eol=lf
package-lock.json text eol=lf
yarn.lock text eol=lf

# Binary files
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.ttf binary
*.woff binary
*.woff2 binary
